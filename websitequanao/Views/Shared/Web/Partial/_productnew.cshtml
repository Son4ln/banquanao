@*Danh sách sản phẩm mới nhất*@
@foreach (var i in ViewBag.sp_mn)
{
    <div class="card text-center card-product">
        <div class="card-product__img">
            <img class="img-fluid" src="@i.Hinh" alt="">
            <ul class="card-product__imgOverlay">
                <li><button href="@Url.Action("Index", "Products", new { id = i.ID})" onclick="redirectClick(this)"><i class=" ti-search"></i></button></li>
                <li><button><i class="ti-shopping-cart"></i></button></li>
                <li><button><i class="ti-heart"></i></button></li>
            </ul>
        </div>
        <div class="card-body">
            <p>@i.LoaiSP.Ten</p>
            <h4 class="card-product__title"><a href="@Url.Action("Index", "Products", new { id = i.ID})">@i.Ten</a></h4>
            <p class="card-product__price">
                @string.Format("{0:0,0 VND}", @i.DonGia)
            </p>
        </div>
    </div>
}

