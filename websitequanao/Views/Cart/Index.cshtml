@model IEnumerable<websitequanao.Models.CartModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Web/_LayoutHome.cshtml";
}

    <main class="site-main">
        <!-- ================ start banner area ================= -->
        <section class="blog-banner-area" id="category">
            <div class="container h-100">
                <div class="blog-banner">
                    <div class="text-center">
                        <h1>Shopping Cart</h1>
                        <nav aria-label="breadcrumb" class="banner-breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Trang Chủ</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Giỏ hàng</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section>


        <!--================Cart Area =================-->
        <section class="cart_area">
            <div class="container">
                <div class="cart_inner">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Mã sản phẩm</th>
                                    <th scope="col">Hình ảnh</th>
                                    <th scope="col">Đơn giá</th>
                                    <th scope="col">Số lượng</th>
                                    <th scope="col">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MASP)
                                    </td>
                                    <td>
                                        <img src="@Html.DisplayFor(modelItem => item.HINHANH)" alt="" style="width: 120px">
                                    </td>
                                    <td>
                                        <h5>@Html.DisplayFor(modelItem => item.DONGIA) VND</h5>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SOLUONG)
                                    </td>
                                    <td>
                                        <h5>@Html.DisplayFor(modelItem => item.THANHTIEN) VND</h5>
                                    </td>
                                </tr>
                                }

                                <tr class="out_button_area">
                                    <td class="d-none-l">
                                    </td>
                                    <td class="">
                                    </td>
                                    <td>
                                    </td>
                                    <td>
                                        <div class="checkout_btn_inner d-flex align-items-center">
                                            <a class="gray_btn" href="/">Tiếp tục mua sắm</a>
                                            <a class="primary-btn ml-2" href="@Url.Action("Checkout", "Cart")">Thanh toán</a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
        <!--================End Cart Area =================-->

    </main>
